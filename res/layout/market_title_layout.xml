<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/market_title_layout"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  
	<TextView android:id="@+id/market_title"
    	style="@style/TextStyleLarge"
    	android:text="@string/market_title"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true"
    	android:layout_marginTop="15dip"
    	android:layout_alignParentRight="true"
    	android:layout_marginRight="30dip"/>
    	
    <ImageView android:id="@+id/market_logo" 
    	android:src="@drawable/test"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_toLeftOf="@id/market_title"
    	android:layout_marginRight="10dip"
    	android:layout_alignTop="@id/market_title"/>
    
    <TextView android:id="@+id/market_subtitle"
    	style="@style/TextStyleSmall"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignLeft="@id/market_title"
    	android:layout_marginLeft="10dip"
    	android:layout_below="@id/market_title"
    	android:layout_marginTop="5dip"/>
	   		  
</RelativeLayout>
